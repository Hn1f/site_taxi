{% extends 'base.html.twig' %}


{% block title %}Blog{% endblock %}



{% block body %}
    
    
    <div class="row">
        {% for article in articles %}
            <div class="col-sm-2 col-md-4 col-lg-3 border border-black rounded">
                <div class="row">
                    <div class="col-sm-12 article">
                        <img src="/uploads/images/{{ article.image_name }}" alt="illustration"
                        style="width:100px, heigth:50px">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                       {{article.title}}
                    </div>
                </div>
                 <div class="row">
                    <div class="col-sm-12">
                      
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6"></div>
                    <div class="col-sm-4">
                        <a href="{{ path('blog_show', {'id': article.id }) }}" class="btn btn-warning">Lire la suite</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

