{% extends 'base.html.twig' %}

{% block title %}commentaire{% endblock %}


{% block body %}
        <div class="row topContact">
            <div class="col-sm-1"></div>
            <div class="col-sm-10 text-left"> 
                <p>Vous avez apprécié votre trajet en notre compagnie ou quelque chose vous à déplus ? N'hésitez pas a nous partagez vos avis, commentaire ou remarque ci dessous</p>
            </div> 
        </div> 
        {{ form_start(form) }}
            <div class="form-row">
                <div class="col-lg-2"></div>
                <div class="col-lg-4 text-left"> 
                    {{ form_row(form.commentaire) }}
                </div> 
                <div class="col-lg-1"></div>
                <div class="col-lg-2 text-left"> 
                      {{ form_row(form.note) }}
                <div class="row">
                    <div class="col">
                        <button id="etoile1" class="star" value="1"><i class="icon-star"></i></button>
                        <button id="etoile2" class="star" value="2"><i class="icon-star"></i></button>
                        <button id="etoile3" class="star" value="3"><i class="icon-star"></i></button>
                        <button id="etoile4" class="star" value="4"><i class="icon-star"></i></button>
                        <button id="etoile5" class="star" value="5"><i class="icon-star"></i></button>
                    </div>
                </div>
                </div> 
            </div> 
            <div class="row">
                <div class="col-lg-12 text-center">
                    <button type="submit" class="btn btn-warning">Publier</button>
                </div> 
            </div>
        
        {{ form_end(form) }}
    </div>
    
{% endblock %}