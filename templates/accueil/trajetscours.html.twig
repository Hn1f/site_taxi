{% extends 'base.html.twig' %}



{% block title %}Mes trajets en cour{% endblock %}

{% block body %}
    <div class="row">
        {% if trajetsencours is defined %}
            
      
        {% for trajet in trajetsencours %}
            <div class="col-sm-2 col-md-4 col-lg-3 border border-black rounded">
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-10">
                        <p>Vous avez réservez un trajet du {{ trajet.adresse1 }} {{ trajet.cp1 }}  pour aller au {{ trajet.adresse2}} {{ trajet.cp2 }} le {{ trajet.hour | date('d/m/Y') }} à  {{ trajet.hour | date('H:m:s') }} </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-2">
                        <a class='btn  btn-warning' href= "{{ path('commentaire') }}"/>Laissez un avis </a>
                    </div>
                    <div class="col-sm-2">
                        <a class='btn' href= "{{ path('delete',{'idtrajet': trajet.id }) }}"/>Supprimer le trajet </a>
                    </div>
                </div>
            </div>
        {% endfor %}  
        {% else %}
            <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-10">Désolé vous n'avez aucune réservation en cour</div>
            </div>
        {% endif %}
    </div>

{% endblock %}