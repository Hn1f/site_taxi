{% extends 'base.html.twig' %}


{% block title %}Mes trajets{% endblock %}

{% block javascripts %}
        <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
        <script
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDlAsntkQzHrbKeT0GQkaLSSdWIjIqQeqk&callback=initMap&libraries=&v=weekly"
            defer
        ></script>
         {{ encore_entry_script_tags('app') }}
{% endblock %}


{% block body %}
    
    
    <div class="row">
        {% for trajet in trajets %}
            <div class="col-sm-2 col-md-4 col-lg-3 border border-black rounded">
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-10">
                        <p>Vous êtes partit du {{ trajet.adresse1 }} {{ trajet.cp1 }}  pour aller au {{ trajet.adresse2}} {{ trajet.cp2 }} le {{ trajet.hour | date('d/m/Y') }} à  {{ trajet.hour | date('H:m:s') }}  </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5"></div>
                    <div class="col-sm-2">
                        <a class='btn  btn-warning' href= "{{ path('commentaire') }}"/>Laissez un avis </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

