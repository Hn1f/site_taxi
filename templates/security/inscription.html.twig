{% extends 'base.html.twig' %}


{% block title %}Inscription{% endblock %}



{% block body %}
  <div class="connexionbg">
    <div class="container" style="bg-secondary">{{form_start(formInscription)}}
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6"><h1>Inscription !</h1></div>
            </div>
            <div class="row">
                <div class=" col-sm-1 col-lg-3 "></div>
                <div class=" col-sm-10 col-lg-6" id="inscription">
                    <div class="row inscription1"><div class="col-lg-12">{{ form_row(formInscription.firstname) }}</div></div>
                    <div class="row inscription1"><div class="col-lg-12">{{ form_row(formInscription.lastName) }}</div></div>
                    <div class="row inscription1"><div class="col-lg-12">{{ form_row(formInscription.email) }}</div></div>
                    <div class="row inscription1"><div class="col-lg-12">{{ form_row(formInscription.password) }}</div></div>
                    <div class="row inscription1"><div class="col-lg-12">{{ form_row(formInscription.birth) }}</div></div>
                    <div class="row inscription1"><div class="col-lg-12">{{ form_row(formInscription.adresse) }}</div></div>
                    <div class="row inscription1"><div class="col-lg-12">{{ form_row(formInscription.zipCode) }}</div></div>
                    <div class="row inscription1"><div class="col-lg-12">{{ form_row(formInscription.phone) }}</div></div>
                    <button class="btn btn-warning btn-lg" id="inscriptionbutton" value="Inscription" type="submit">Inscription</button>
                    {{form_end(formInscription)}}
                </div>
            </div>
    </div>
{% endblock %}
