{% extends 'base.html.twig' %}

{% block title %}Connexion !{% endblock %}

{% block style %}
        {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %} 
<div class="connexionbg">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
 
    <div class="row">
          <div class="col-sm-1 col-lg-3"></div>
          <div class="col-sm-10 col-lg-6 " >
         {% if prixmin is defined and prixmax is defined %}   
          <h3>
            Votre trajet est estimé entre {{ prixmin }}€ et {{ prixmax }}€ dont {{ prixresa }}€ payable à la réservation,<br/>  
            veuillez vous connecter ou vous inscrire pour terminer la réservation.
          </h3>
        {% else %}
          <h3>
            Connectez vous afin d'acceder à votre compte ! 
          </h3>
        {% endif %}
          </div>
        </div>
        <div class="row" style="margin-top:2%">
          <div class=" col-sm-2 col-lg-4"></div>
          <div class="col-sm-8 col-lg-4" id="connexion">
    <h1 class="h3 mb-3 font-weight-normal">Connexion !</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-warning" type="submit">
        Connexion !
    </button><br/>
              <a href="{{ path('mdp') }}"> Mot de passe oublié</a>
              <h1>Ou </h1>
              <a href="{{ path('inscription') }}"> Cliquez ici pour vous inscrire</a>
            </form>
          </div> </div> 
        </div>
</form></div>
{% endblock %}
